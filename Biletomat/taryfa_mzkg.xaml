        <ScrollViewer Margin="50,197,50,213" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" PanningMode="VerticalOnly">
            <Canvas Name="canvas_WPF" Width="{Binding ActualWidth, ElementName=Obraz}" Height="{Binding ActualHeight, ElementName=Obraz}" >
                <Canvas.Background>
                    <VisualBrush  >
                        <VisualBrush.Visual>
                            <Image Name="Obraz" Source="images/taryfa_mzkg.bmp" Width="1500" />
